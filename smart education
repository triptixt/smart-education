#script.js
// script.js

// Chat Box functionality
const chatInput = document.getElementById('chat-input');
const sendBtn = document.getElementById('send-btn');
const chatLog = document.getElementById('chat-log');

sendBtn.addEventListener('click', () => {
  const userMessage = chatInput.value;
  chatLog.innerHTML += `<li>Student: ${userMessage}</li>`;
  chatInput.value = '';
});

// Live Interaction button functionality
const liveInteractionBtn = document.getElementById('live-interaction-btn');

liveInteractionBtn.addEventListener('click', () => {
  alert('Live interaction started!');
});

// Weekly Quiz functionality
function startQuiz() {
    // Hide the start button and show the quiz content
    document.getElementById('start-btn').style.display = 'none';
    document.getElementById('quiz-content').style.display = 'block';
}



function endQuiz() {
    // Hide the quiz content and show the start button
    document.getElementById('quiz-content').style.display = 'none';
    document.getElementById('start-btn').style.display = 'block';
    alert("Quiz ended! your final score is:" + score);
}
function restartQuiz() {
    currentQuestionIndex = 0;
    score = 0;
    coins= 0;
    document.getElementById("question").innerHTML = "";
    document.getElementById("options").innerText = "coins : 0";
    document.getElementById("score").innerHTML = "score : 0";
    //reset coins display
    document.getElementById('start-btn').style.display ='block';
    document.getElementById('quiz-content').style.display = 'none';

    
}
    

const quiz = [
    {
        question: "What is the capital of France?",
        options: ["Berlin", "Madrid", "Paris", "Rome"],
        correct: 2
    },
    {
        question: "What is 2 + 2?",
        options: ["3", "4", "5", "6"],
        correct: 1
    },
    {
        question: "What is the largest ocean on Earth?",
        options: ["Atlantic", "Indian", "Pacific", "Arctic"],
        correct: 2
    },
    {
        question: "What planet is known as the Red Planet?",
        options: ["Earth", "Mars", "Jupiter", "Saturn"],
        correct: 1
    },
    {
        question: "Which language is used for web apps?",
        options: ["PHP", "Python", "JavaScript", "All"],
        correct: 3
    }
];


let currentQuestionIndex = 0;
let score = 0;
let coins = 0;

function displayQuestion() {
    const questionElement = document.getElementById('question');
    const optionsElement = document.getElementById('options');

    const currentQuestion = quiz[currentQuestionIndex];
    questionElement.textContent = currentQuestion.question;

    // Clear previous options
    optionsElement.innerHTML = '';

    // Display options
    currentQuestion.options.forEach((option, index) => {
        const button = document.createElement('button');
        button.textContent = option;
        button.onclick = () => handleAnswer(index);
        optionsElement.appendChild(button);
    });
}

function handleAnswer(selectedOptionIndex) {
    const currentQuestion = quiz[currentQuestionIndex];
    const scoreElement = document.getElementById('score');
    if (selectedOptionIndex === currentQuestion.correct) {
        coins += 10;
    } else {
        coins -= 1;
    }

    scoreElement.textContent = `Coins: ${coins}`;

    // Move to the next question
    currentQuestionIndex++;

    if (currentQuestionIndex < quiz.length) {
        displayQuestion();
    } else {
        document.getElementById('question-container').innerHTML = `<h2>Quiz Complete!</h2><p>Your total coins: ${coins}</p>`;
    }
}

// Initialize quiz
displayQuestion();


function claimCoins() {
    alert("You have claimed your coins.");
    document.getElementById('coinMessage').innerText = `You now have ${coinCount} coins!`;
}

function redeemPrize(requiredCoins) {
    if (coinCount >= requiredCoins) {
        coinCount -= requiredCoins;
        document.getElementById('coinCount').innerText = coinCount;
        alert(`Congratulations! You've redeemed a prize for ${requiredCoins} coins.`);
    } else {
        alert("You don't have enough coins to redeem this prize.");
    }
}
// Example Notifications and Student List
let Notifications = [
    "Student John Doe asked a question in Math.",
    "Student Jane Smith completed her quiz in Science.",
];

let students = ["John Doe", "Jane Smith"];

let sessions = [];

// Display notifications on load
window.onload = function() {
    updateNotifications();
};

// Function to display notifications
function updateNotifications() {
    let notificationList = document.getElementById('notification-list');
    notificationList.innerHTML = ''; // Clear previous notifications

    if (notifications.length > 0) {
        notifications.forEach(notification => {
            let li = document.createElement('li');
            li.textContent = notification;
            notificationList.appendChild(li);
        });
    } else {
        let li = document.createElement('li');
        li.textContent = "No new notifications.";
        notificationList.appendChild(li);
    }
}

// Schedule a new live session
document.getElementById('session-form').addEventListener('submit', function(e) {
    e.preventDefault(); // Prevent page reload

    let sessionName = document.getElementById('session-name').value;
    let sessionDate = document.getElementById('session-date').value;
    let sessionTime = document.getElementById('session-time').value;

    let sessionDetails = `${sessionName} on ${sessionDate} at ${sessionTime}`;
    sessions.push(sessionDetails);

    updateSessionList(); // Update the upcoming sessions list

    // Clear the form
    document.getElementById('session-form').reset();
});

// Function to update the upcoming sessions list
function updateSessionList() {
    let sessionList = document.getElementById('session-list');
    sessionList.innerHTML = ''; // Clear previous list

    if (sessions.length > 0) {
        sessions.forEach(session => {
            let li = document.createElement('li');
            li.textContent = session;
            sessionList.appendChild(li);
        });
    } else {
        let li = document.createElement('li');
        li.textContent = "No upcoming sessions.";
        sessionList.appendChild(li);
    }
}
// Example data for progress, notifications, attendance, and messages
let notifications = [
    "Your child scored 90% in Science Quiz.",
    "Your child missed a live session last week."
];

let attendance = 30;
let totalClasses = 34;

let voiceMessages = ["You have a voice message from Math Tutor."];
let writtenNotices = ["Please review your child's attendance for this month."];

// Display notifications on load
window.onload = function() {
    updateNotifications();
    updateMessages();
};

// Function to display notifications
function updateNotifications() {
    let notificationList = document.getElementById('notification-list');
    notificationList.innerHTML = ''; // Clear previous notifications

    if (notifications.length > 0) {
        notifications.forEach(notification => {
            let li = document.createElement('li');
            li.textContent = notification;
            notificationList.appendChild(li);
        });
    } else {
        let li = document.createElement('li');
        li.textContent = "No new notifications.";
        notificationList.appendChild(li);
    }
}

// Function to display voice messages and written notices
function updateMessages() {
    let voiceMessagesList = document.getElementById('voice-messages');
    let writtenNoticesList = document.getElementById('written-notices');

    voiceMessagesList.innerHTML = '';
    writtenNoticesList.innerHTML = '';

    // Display voice messages
    if (voiceMessages.length > 0) {
        voiceMessages.forEach(message => {
            let li = document.createElement('li');
            li.textContent = message;
            voiceMessagesList.appendChild(li);
        });
    } else {
        let li = document.createElement('li');
        li.textContent = "No voice messages.";
        voiceMessagesList.appendChild(li);
    }

    // Display written notices
    if (writtenNotices.length > 0) {
        writtenNotices.forEach(notice => {
            let li = document.createElement('li');
            li.textContent = notice;
            writtenNoticesList.appendChild(li);
        });
    } else {
        let li = document.createElement('li');
        li.textContent = "No new notices.";
        writtenNoticesList.appendChild(li);
    }
}


